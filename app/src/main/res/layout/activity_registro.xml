<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#65D16E4F"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="REGISTRO DE USUARIOS"
            android:textColor="#121111"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <EditText
            android:id="@+id/txtApellidoRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese sus apellidos"
            android:inputType="textPersonName"
            android:textColor="#131212"
            android:textColorHint="#BC0E0D0D" />

        <EditText
            android:id="@+id/txtNombreRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese sus nombre"
            android:inputType="textPersonName"
            android:textColor="#131212"
            android:textColorHint="#BC0E0D0D" />

        <EditText
            android:id="@+id/txtEmailRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese su dirección de correo"
            android:inputType="textEmailAddress"
            android:textColor="#131212"
            android:textColorHint="#BC0E0D0D" />

        <EditText
            android:id="@+id/txtPasswordRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese una contraseña"
            android:inputType="textPassword"
            android:textColor="#131212"
            android:textColorHint="#BC0E0D0D" />

        <EditText
            android:id="@+id/txtPasswordConfirmada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Confirme la contraseña ingresada"
            android:inputType="textPassword"
            android:textColor="#131212"
            android:textColorHint="#BC0E0D0D" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="321dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:onClick="registrarUsuario"
            android:text="Registrar Cuenta"
            app:backgroundTint="#1E88E5" />

        <Button
            android:id="@+id/button5"
            android:layout_width="322dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:onClick="cerrarPantallaRegistro"
            android:text="Cancelar"
            app:backgroundTint="#E53935" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>